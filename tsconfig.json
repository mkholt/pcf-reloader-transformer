{
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [ "src", "types" ],
	"exclude": [ "samples" ],
}